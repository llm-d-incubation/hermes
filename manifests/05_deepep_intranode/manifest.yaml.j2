---
apiVersion: batch/v1
kind: Job
metadata:
  name: deepep-intranode-node1-{{ test_id }}
  labels:
    app: deepep-intranode-test
    role: node1
    test-id: "{{ test_id }}"
spec:
  template:
    metadata:
      labels:
        app: deepep-intranode-test
        role: node1
        test-id: "{{ test_id }}"
    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ server_node.name }}"
      containers:
      - name: deepep-intranode-node1
        image: {{ image }}
        command: ["/bin/bash"]
        args:
        - -c
        - |
          set -e
          echo "Starting DeepEP intranode test on node {{ server_node.name }}"

          echo "GPU information:"
          nvidia-smi -L || echo "nvidia-smi not available"

          echo "Cloning DeepEP repository..."
          cd /tmp
          git clone https://github.com/deepseek-ai/DeepEP || echo "Repository already exists"
          cd DeepEP

          echo "Running DeepEP intranode test..."
          python tests/test_intranode.py --num-processes 4 --num-tokens 1024 --hidden 2048 --num-topk 4 --num-experts 64

          echo "DeepEP intranode test completed successfully"
        resources:
          requests:
            nvidia.com/gpu: "4"
            memory: 16Gi
            cpu: "8"
          limits:
            nvidia.com/gpu: "4"
            memory: 32Gi
            cpu: "16"
        env:
        - name: MASTER_ADDR
          value: "127.0.0.1"
        - name: MASTER_PORT
          value: "29500"
        - name: WORLD_SIZE
          value: "1"
        - name: RANK
          value: "0"
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: spec.nodeName
