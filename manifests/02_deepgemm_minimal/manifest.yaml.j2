---
apiVersion: v1
kind: ConfigMap
metadata:
  name: deepgemm-minimal-test-script-{{ test_id }}
  labels:
    app: deepgemm-minimal-test
    test-id: "{{ test_id }}"
data:
  deepgemm-minimal-test.py: |
{{ deepgemm_minimal_test_script }}
---
apiVersion: batch/v1
kind: Job
metadata:
  name: deepgemm-minimal-node1-{{ test_id }}
  labels:
    app: deepgemm-minimal-test
    role: node1
    test-id: "{{ test_id }}"
spec:
  template:
    metadata:
      labels:
        app: deepgemm-minimal-test
        role: node1
        test-id: "{{ test_id }}"
    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ server_node.name }}"
      containers:
      - name: deepgemm-minimal-node1
        image: {{ image }}
        command: ["/bin/bash"]
        args:
        - -c
        - |
          set -e
          echo "Starting DeepGEMM minimal test on node {{ server_node.name }}"

          echo "GPU information:"
          nvidia-smi -L || echo "nvidia-smi not available"

          echo "Running DeepGEMM minimal test..."
          python3 /opt/deepgemm-test/deepgemm-minimal-test.py --gpu 0

          echo "DeepGEMM minimal test completed successfully"
        resources:
          requests:
            nvidia.com/gpu: "1"
            memory: 4Gi
            cpu: "2"
          limits:
            nvidia.com/gpu: "1"
            memory: 8Gi
            cpu: "4"
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: spec.nodeName
        volumeMounts:
        - name: deepgemm-test-script
          mountPath: /opt/deepgemm-test
          readOnly: true
      volumes:
      - name: deepgemm-test-script
        configMap:
          name: deepgemm-minimal-test-script-{{ test_id }}
          defaultMode: 493
