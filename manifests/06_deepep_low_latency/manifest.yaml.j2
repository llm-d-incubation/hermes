    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ client_node.name }}"
      containers:
      - name: deepep-lowlatency-worker
        image: {{ image }}
        command: ["/bin/bash", "/opt/deepep-test/worker-entrypoint.sh"]
        resources:
          requests:
            {{ rdma_resource_type }}: "1"
            nvidia.com/gpu: "{{ gpu_count }}"
            memory: 8Gi
