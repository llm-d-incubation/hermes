{%- from "_common/labels.yaml.j2" import job_labels, service_labels, pod_labels -%}
{%- from "_common/pod_metadata_env.yaml.j2" import pod_metadata_env -%}
{%- from "_common/resources.yaml.j2" import resources -%}
{%- from "_common/ucx_env.yaml.j2" import ucx_env -%}
{%- from "_common/sriov.yaml.j2" import sriov_annotation_dual_interface -%}
{%- from "_common/configmap.yaml.j2" import configmap -%}
---
{{- configmap("deepep-internode-script", "deepep-internode-test", configmap_files) }}
---
apiVersion: v1
kind: Service
metadata:
  name: deepep-internode-master-{{ test_id }}
  labels:
{{- service_labels("deepep-internode-test", "master") }}
spec:
  clusterIP: None
  selector:
    app: deepep-internode-test
    role: master
    test-id: "{{ test_id }}"
  ports:
  - port: 29500
    name: dist
---
apiVersion: batch/v1
kind: Job
metadata:
  name: deepep-internode-master-{{ test_id }}
  labels:
{{- job_labels("deepep-internode-test", "master") }}
spec:
  activeDeadlineSeconds: {{ active_deadline_seconds }}
  template:
    metadata:
      labels:
{{- pod_labels("deepep-internode-test", "master") }}
{{- sriov_annotation_dual_interface() }}
    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ server_node.name }}"
      containers:
      - name: deepep-internode-master
        image: {{ image }}
        command: ["/bin/bash", "/opt/deepep-test/master-entrypoint.sh"]
{{- resources(rdma_qty="2", gpu_qty=gpu_count, memory_req="32Gi", memory_lim="64Gi", cpu_req="16", cpu_lim="32") }}
        env:
        - name: TEST_ID
          value: "{{ test_id }}"
        - name: GPU_COUNT
          value: "{{ gpu_count }}"
        - name: UCX_TLS
          value: "{{ ucx_tls }}"
        {% if ucx_gid_index -%}
        - name: UCX_IB_GID_INDEX
          value: "{{ ucx_gid_index }}"
        {% endif -%}
{{- pod_metadata_env() }}
        volumeMounts:
        - name: deepep-test-script
          mountPath: /opt/deepep-test
          readOnly: true
        - name: dshm
          mountPath: /dev/shm
      volumes:
      - name: deepep-test-script
        configMap:
          name: deepep-internode-script-{{ test_id }}
          defaultMode: 493
      - name: dshm
        emptyDir:
          medium: Memory
          sizeLimit: 16Gi
---
apiVersion: batch/v1
kind: Job
metadata:
  name: deepep-internode-worker-{{ test_id }}
  labels:
{{- job_labels("deepep-internode-test", "worker") }}
spec:
  activeDeadlineSeconds: {{ active_deadline_seconds }}
  template:
    metadata:
      labels:
{{- pod_labels("deepep-internode-test", "worker") }}
{{- sriov_annotation_dual_interface() }}
    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ client_node.name }}"
      containers:
      - name: deepep-internode-worker
        image: {{ image }}
        command: ["/bin/bash", "/opt/deepep-test/worker-entrypoint.sh"]
{{- resources(rdma_qty="2", gpu_qty=gpu_count, memory_req="32Gi", memory_lim="64Gi", cpu_req="16", cpu_lim="32") }}
        env:
        - name: TEST_ID
          value: "{{ test_id }}"
        - name: GPU_COUNT
          value: "{{ gpu_count }}"
        - name: UCX_TLS
          value: "{{ ucx_tls }}"
        {% if ucx_gid_index -%}
        - name: UCX_IB_GID_INDEX
          value: "{{ ucx_gid_index }}"
        {% endif -%}
{{- pod_metadata_env() }}
        volumeMounts:
        - name: deepep-test-script
          mountPath: /opt/deepep-test
          readOnly: true
        - name: dshm
          mountPath: /dev/shm
      volumes:
      - name: deepep-test-script
        configMap:
          name: deepep-internode-script-{{ test_id }}
          defaultMode: 493
      - name: dshm
        emptyDir:
          medium: Memory
          sizeLimit: 16Gi
