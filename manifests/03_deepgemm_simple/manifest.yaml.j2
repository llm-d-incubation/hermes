{%- from "_common/labels.yaml.j2" import job_labels, pod_labels -%}
{%- from "_common/pod_metadata_env.yaml.j2" import pod_metadata_env -%}
{%- from "_common/configmap.yaml.j2" import configmap -%}
---
{{- configmap("deepgemm-simple-test-script", "deepgemm-simple-test", configmap_files) }}
---
apiVersion: batch/v1
kind: Job
metadata:
  name: deepgemm-simple-node1-{{ test_id }}
  labels:
{{- job_labels("deepgemm-simple-test", "node1") }}
spec:
  activeDeadlineSeconds: {{ active_deadline_seconds }}
  template:
    metadata:
      labels:
{{- pod_labels("deepgemm-simple-test", "node1") }}
    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ server_node.name }}"
      containers:
      - name: deepgemm-simple-node1
        image: {{ image }}
        command: ["/bin/bash", "/opt/deepgemm-test/node1-entrypoint.sh"]
        resources:
          requests:
            nvidia.com/gpu: "1"
            memory: 4Gi
            cpu: "2"
          limits:
            nvidia.com/gpu: "1"
            memory: 8Gi
            cpu: "4"
        env:
{{- pod_metadata_env() }}
        volumeMounts:
        - name: deepgemm-test-script
          mountPath: /opt/deepgemm-test
          readOnly: true
      volumes:
      - name: deepgemm-test-script
        configMap:
          name: deepgemm-simple-test-script-{{ test_id }}
          defaultMode: 493
---
