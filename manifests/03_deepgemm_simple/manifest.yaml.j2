---
apiVersion: v1
kind: ConfigMap
metadata:
  name: deepgemm-simple-test-script-{{ test_id }}
  labels:
    app: deepgemm-simple-test
    test-id: "{{ test_id }}"
binaryData:
{%- for key, value in configmap_files | items %}
  {{ key }}: {{ value }}
{%- endfor %}
---
apiVersion: batch/v1
kind: Job
metadata:
  name: deepgemm-simple-node1-{{ test_id }}
  labels:
    app: deepgemm-simple-test
    role: node1
    test-id: "{{ test_id }}"
spec:
  template:
    metadata:
      labels:
        app: deepgemm-simple-test
        role: node1
        test-id: "{{ test_id }}"
    spec:
      restartPolicy: Never
      nodeSelector:
        kubernetes.io/hostname: "{{ server_node.name }}"
      containers:
      - name: deepgemm-simple-node1
        image: {{ image }}
        command: ["/bin/bash", "/opt/deepgemm-test/node1-entrypoint.sh"]
        resources:
          requests:
            nvidia.com/gpu: "1"
            memory: 4Gi
            cpu: "2"
          limits:
            nvidia.com/gpu: "1"
            memory: 8Gi
            cpu: "4"
        env:
        - name: POD_NAME
          valueFrom:
            fieldRef:
              fieldPath: metadata.name
        - name: NODE_NAME
          valueFrom:
            fieldRef:
              fieldPath: spec.nodeName
        volumeMounts:
        - name: deepgemm-test-script
          mountPath: /opt/deepgemm-test
          readOnly: true
      volumes:
      - name: deepgemm-test-script
        configMap:
          name: deepgemm-simple-test-script-{{ test_id }}
          defaultMode: 493
